generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(uuid())
  nome     String
  email    String  @unique
  senha    String
  telefone String? @unique
  perfil   String?
}

model Turmas {
  id          String   @id @default(uuid())
  nome        String   @unique
  turma       String
  periodo     String

}